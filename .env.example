# ====================================
# PLEX KIOSK - Configuration
# ====================================
# Copy this file to .env and fill in your values

# Application
APP_NAME=plex-kiosk
APP_PORT=8765
SECRET_KEY=change-me-to-a-random-string-min-32-chars
DEBUG=false

# Database
DATABASE_URL=sqlite:///./data/kiosk.db

# Redis
REDIS_URL=redis://redis:6379/0

# ====================================
# EXTERNAL SERVICES
# ====================================

# FlareSolverr (Cloudflare bypass)
FLARESOLVERR_URL=http://flaresolverr:8191/v1

# Ollama (Local AI)
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2.5:14b

# TMDB
TMDB_API_KEY=your_tmdb_api_key

# YGGtorrent
YGG_USERNAME=your_username
YGG_PASSWORD=your_password
YGG_PASSKEY=your_passkey

# ====================================
# PLEX
# ====================================
PLEX_URL=http://your-plex-ip:32400
PLEX_TOKEN=your_plex_token

# ====================================
# QBITTORRENT
# ====================================
QBITTORRENT_URL=http://your-qbittorrent-ip:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# ====================================
# PATHS (Configure your library paths)
# ====================================

# Temporary download folder (1TB max recommended)
DOWNLOAD_PATH=/downloads

# Library paths - JSON mapping
# Format: {"type": "/path/to/library"}
# Types: movie, animated_movie, series, animated_series_us, anime
LIBRARY_PATHS={"movie": "/media/Films", "animated_movie": "/media/Films d'animation", "series": "/media/Série TV", "animated_series_us": "/media/Série Animée (US)", "anime": "/media/Animé (JAP)"}

# ====================================
# NOTIFICATIONS
# ====================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# ====================================
# LIMITS
# ====================================
MAX_REQUESTS_PER_DAY=10
SEED_DURATION_HOURS=24
MAX_DOWNLOAD_SIZE_GB=1000
