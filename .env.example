# ====================================
# PLEX KIOSK - Configuration
# ====================================
# Copy this file to .env and fill in your values

# Application
APP_NAME=plex-kiosk
APP_PORT=8765
SECRET_KEY=change-me-to-a-random-string-min-32-chars
DEBUG=false

# Database (PostgreSQL recommended for production)
# For development with SQLite: DATABASE_URL=sqlite+aiosqlite:///./data/kiosk.db
# For production with PostgreSQL:
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/plex_kiosk_dev
# PostgreSQL password (for Docker Compose)
POSTGRES_PASSWORD=postgres

# Redis
REDIS_URL=redis://redis:6379/0

# ====================================
# EXTERNAL SERVICES
# ====================================

# FlareSolverr (Cloudflare bypass)
FLARESOLVERR_URL=http://flaresolverr:8191/v1

# Ollama (Local AI)
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2.5:14b

# TMDB
TMDB_API_KEY=your_tmdb_api_key

# YGGtorrent
YGG_USERNAME=your_username
YGG_PASSWORD=your_password
YGG_PASSKEY=your_passkey

# ====================================
# PLEX
# ====================================
PLEX_URL=http://your-plex-ip:32400
PLEX_TOKEN=your_plex_token

# ====================================
# QBITTORRENT
# ====================================
QBITTORRENT_URL=http://your-qbittorrent-ip:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# ====================================
# PATHS (Configured via Admin Panel > MÃ©dias)
# ====================================
# DOWNLOAD_PATH and LIBRARY_PATHS are now managed through the Admin Panel.
# Default paths are initialized on first startup.

# ====================================
# NOTIFICATIONS
# ====================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# ====================================
# CORS (Security - Production Only)
# ====================================
# In development (DEBUG=true), localhost origins are automatically allowed
# In production (DEBUG=false), you MUST configure these:

# Frontend URL for CORS
# FRONTEND_URL=https://plex-kiosk.yourdomain.com

# Additional CORS origins (comma-separated)
# CORS_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com

# ====================================
# LIMITS
# ====================================
MAX_REQUESTS_PER_DAY=10
SEED_DURATION_HOURS=24
MAX_DOWNLOAD_SIZE_GB=1000
